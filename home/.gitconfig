[user]
    email = eric@epiccoleman.com
    name = Eric Coleman
[core]
    editor = /usr/bin/vim
    excludesfile = ~/.gitignore-global
[push]
    default = simple
[alias]
    stat  = status
    tatus = status
    st    = status
    nuke  = reset --hard HEAD
    alias = config --get-regexp ^alias\\.
    shlog = log --oneline
    sl    = log --oneline
    cm    = commit -m
    aa    = add --all
    dc    = diff --cached
    discard-untracked = git clean -fx
    update-commit = git commit --amend --no-edit
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[status]
    showUntrackedFiles = all
[pull]
    rebase = true

